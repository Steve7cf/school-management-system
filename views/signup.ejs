<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up - School Management System</title>
    
    <!-- Bootstrap 5.3.2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome 6.5.1 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
    
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .signup-container {
            max-width: 500px;
            margin: 30px auto;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            overflow: hidden;
        }
        
        .signup-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 25px 30px;
            text-align: center;
        }
        
        .signup-header h2 {
            margin: 0;
            font-weight: 600;
            font-size: 1.5rem;
        }
        
        .signup-header p {
            margin: 5px 0 0 0;
            opacity: 0.9;
            font-size: 0.9rem;
        }
        
        .signup-body {
            padding: 25px;
        }
        
        .form-group {
            margin-bottom: 18px;
        }
        
        .form-label {
            font-weight: 500;
            color: #333;
            margin-bottom: 6px;
            font-size: 0.9rem;
        }
        
        .form-control {
            border: 2px solid #e1e5e9;
            border-radius: 8px;
            padding: 10px 12px;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            background: #f8f9fa;
        }
        
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            background: white;
        }
        
        .input-group-text {
            background: #f8f9fa;
            border: 2px solid #e1e5e9;
            border-right: none;
            color: #6c757d;
        }
        
        .input-group .form-control {
            border-left: none;
        }
        
        .btn-signup {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 8px;
            padding: 12px 20px;
            font-weight: 600;
            font-size: 0.95rem;
            color: white;
            width: 100%;
            transition: all 0.3s ease;
            margin-top: 10px;
        }
        
        .btn-signup:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            color: white;
        }
        
        .signup-footer {
            text-align: center;
            padding: 20px 30px;
            background: #f8f9fa;
            border-top: 1px solid #e9ecef;
        }
        
        .signup-footer a {
            color: #667eea;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }
        
        .signup-footer a:hover {
            color: #764ba2;
        }
        
        .alert {
            border-radius: 8px;
            border: none;
            font-size: 0.9rem;
        }
        
        .alert-danger {
            background: #f8d7da;
            color: #721c24;
        }
        
        .alert-success {
            background: #d4edda;
            color: #155724;
        }
        
        .school-logo {
            width: 50px;
            height: 50px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 15px;
            font-size: 1.5rem;
        }
        
        .role-selector {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }
        
        .role-option {
            flex: 1;
            text-align: center;
            padding: 10px;
            border: 2px solid #e1e5e9;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            background: #f8f9fa;
        }
        
        .role-option:hover {
            border-color: #667eea;
            background: #e8f2ff;
        }
        
        .role-option.active {
            border-color: #667eea;
            background: #667eea;
            color: white;
        }
        
        .role-option input[type="radio"] {
            display: none;
        }
        
        .role-option i {
            font-size: 1.2rem;
            margin-bottom: 5px;
            display: block;
        }
        
        .role-option span {
            font-size: 0.85rem;
            font-weight: 500;
        }
        
        .form-section {
            display: none;
        }
        
        .form-section.active {
            display: block;
        }
    </style>
  </head>
  <body>
    <div class="container">
        <div class="signup-container">
            <div class="signup-header">
                <div class="school-logo">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <h2>Create Account</h2>
                <p>Join our school management system</p>
            </div>
            
            <div class="signup-body">
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <%= error %>
                    </div>
                <% } %>
                
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle me-2"></i>
                        <%= success %>
                    </div>
                <% } %>
                
                <div class="role-selector">
                    <label class="role-option" for="role-student">
                        <input type="radio" id="role-student" name="role" value="student" required>
                        <i class="fas fa-user-graduate"></i>
                        <span>Student</span>
                    </label>
                    <label class="role-option" for="role-teacher">
                        <input type="radio" id="role-teacher" name="role" value="teacher">
                        <i class="fas fa-chalkboard-teacher"></i>
                        <span>Teacher</span>
                    </label>
                    <label class="role-option" for="role-parent">
                        <input type="radio" id="role-parent" name="role" value="parent">
                        <i class="fas fa-users"></i>
                        <span>Parent</span>
                    </label>
                </div>
                
                <!-- Student Registration Form -->
                <form id="student-form" class="form-section" action="/register/student" method="POST">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="studentFirstName" class="form-label">
                                    <i class="fas fa-user me-2"></i>First Name
                                </label>
                                <input type="text" class="form-control" id="studentFirstName" name="firstName" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="studentLastName" class="form-label">
                                    <i class="fas fa-user me-2"></i>Last Name
                                </label>
                                <input type="text" class="form-control" id="studentLastName" name="lastName" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="dateOfBirth" class="form-label">
                                    <i class="fas fa-calendar me-2"></i>Date of Birth
                                </label>
                                <input type="date" class="form-control" id="dateOfBirth" name="dateOfBirth" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="gender" class="form-label">
                                    <i class="fas fa-venus-mars me-2"></i>Gender
                                </label>
                                <select class="form-control" id="gender" name="gender" required>
                                    <option value="">Select Gender</option>
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="grade" class="form-label">
                                    <i class="fas fa-graduation-cap me-2"></i>Grade Level
                                </label>
                                <select class="form-control" id="grade" name="grade" required>
                                    <option value="">Select Grade</option>
                                    <option value="1">Grade 1</option>
                                    <option value="2">Grade 2</option>
                                    <option value="3">Grade 3</option>
                                    <option value="4">Grade 4</option>
                                    <option value="5">Grade 5</option>
                                    <option value="6">Grade 6</option>
                                    <option value="7">Grade 7</option>
                                    <option value="8">Grade 8</option>
                                    <option value="9">Grade 9</option>
                                    <option value="10">Grade 10</option>
                                    <option value="11">Grade 11</option>
                                    <option value="12">Grade 12</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="section" class="form-label">
                                    <i class="fas fa-users me-2"></i>Section
                                </label>
                                <select class="form-control" id="section" name="section" required>
                                    <option value="">Select Section</option>
                                    <option value="A">Section A</option>
                                    <option value="B">Section B</option>
                                    <option value="C">Section C</option>
                                    <option value="D">Section D</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="parentEmail" class="form-label">
                            <i class="fas fa-envelope me-2"></i>Parent Email
                        </label>
                        <input type="email" class="form-control" id="parentEmail" name="parentEmail" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="address" class="form-label">
                            <i class="fas fa-map-marker-alt me-2"></i>Address
                        </label>
                        <textarea class="form-control" id="address" name="address" rows="2"></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label for="studentPassword" class="form-label">
                            <i class="fas fa-lock me-2"></i>Password
                        </label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="studentPassword" name="password" required>
                            <span class="input-group-text" onclick="togglePassword('studentPassword', 'studentToggleIcon')">
                                <i class="fas fa-eye" id="studentToggleIcon"></i>
                            </span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="studentConfirmPassword" class="form-label">
                            <i class="fas fa-lock me-2"></i>Confirm Password
                        </label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="studentConfirmPassword" name="confirmPassword" required>
                            <span class="input-group-text" onclick="togglePassword('studentConfirmPassword', 'studentConfirmToggleIcon')">
                                <i class="fas fa-eye" id="studentConfirmToggleIcon"></i>
                            </span>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-signup">
                        <i class="fas fa-user-plus me-2"></i>Create Student Account
                    </button>
                </form>
                
                <!-- Teacher Registration Form -->
                <form id="teacher-form" class="form-section" action="/register/teacher" method="POST">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="teacherFirstName" class="form-label">
                                    <i class="fas fa-user me-2"></i>First Name
                                </label>
                                <input type="text" class="form-control" id="teacherFirstName" name="firstName" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="teacherLastName" class="form-label">
                                    <i class="fas fa-user me-2"></i>Last Name
                                </label>
                                <input type="text" class="form-control" id="teacherLastName" name="lastName" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="teacherEmail" class="form-label">
                            <i class="fas fa-envelope me-2"></i>Email Address
                        </label>
                        <input type="email" class="form-control" id="teacherEmail" name="email" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="teacherPassword" class="form-label">
                            <i class="fas fa-lock me-2"></i>Password
                        </label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="teacherPassword" name="password" required>
                            <span class="input-group-text" onclick="togglePassword('teacherPassword', 'teacherToggleIcon')">
                                <i class="fas fa-eye" id="teacherToggleIcon"></i>
                            </span>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-signup">
                        <i class="fas fa-user-plus me-2"></i>Create Teacher Account
                    </button>
                </form>
                
                <!-- Parent Registration Form -->
                <form id="parent-form" class="form-section" action="/register/parent" method="POST">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="parentFirstName" class="form-label">
                                    <i class="fas fa-user me-2"></i>First Name
                                </label>
                                <input type="text" class="form-control" id="parentFirstName" name="firstName" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="parentLastName" class="form-label">
                                    <i class="fas fa-user me-2"></i>Last Name
                                </label>
                                <input type="text" class="form-control" id="parentLastName" name="lastName" required>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="parentEmail" class="form-label">
                            <i class="fas fa-envelope me-2"></i>Email Address
                        </label>
                        <input type="email" class="form-control" id="parentEmail" name="email" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="parentPhone" class="form-label">
                            <i class="fas fa-phone me-2"></i>Phone Number
                        </label>
                        <input type="tel" class="form-control" id="parentPhone" name="phone" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="childStudentId" class="form-label">
                            <i class="fas fa-id-card me-2"></i>Child's Student ID
                        </label>
                        <input type="text" class="form-control" id="childStudentId" name="childStudentId" required>
                        <small class="form-text text-muted">Enter your child's student ID (e.g., F1/2024/1234)</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="parentPassword" class="form-label">
                            <i class="fas fa-lock me-2"></i>Password
                        </label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="parentPassword" name="password" required>
                            <span class="input-group-text" onclick="togglePassword('parentPassword', 'parentToggleIcon')">
                                <i class="fas fa-eye" id="parentToggleIcon"></i>
                            </span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="parentConfirmPassword" class="form-label">
                            <i class="fas fa-lock me-2"></i>Confirm Password
                        </label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="parentConfirmPassword" name="confirmPassword" required>
                            <span class="input-group-text" onclick="togglePassword('parentConfirmPassword', 'parentConfirmToggleIcon')">
                                <i class="fas fa-eye" id="parentConfirmToggleIcon"></i>
                            </span>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-signup">
                        <i class="fas fa-user-plus me-2"></i>Create Parent Account
                    </button>
                </form>
            </div>
            
            <div class="signup-footer">
                <p class="mb-0">Already have an account? <a href="/login">Sign in here</a></p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Role selector functionality
        document.querySelectorAll('.role-option input[type="radio"]').forEach(radio => {
            radio.addEventListener('change', function() {
                // Remove active class from all options
                document.querySelectorAll('.role-option').forEach(option => {
                    option.classList.remove('active');
                });
                
                // Hide all form sections
                document.querySelectorAll('.form-section').forEach(section => {
                    section.classList.remove('active');
                });
                
                // Add active class to selected option
                if (this.checked) {
                    this.closest('.role-option').classList.add('active');
                    
                    // Show corresponding form
                    const role = this.value;
                    const formId = role + '-form';
                    const form = document.getElementById(formId);
                    if (form) {
                        form.classList.add('active');
                    }
                }
            });
        });
        
        function togglePassword(fieldId, iconId) {
            const passwordField = document.getElementById(fieldId);
            const toggleIcon = document.getElementById(iconId);
            
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
        
        // Form validation
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function(e) {
                const passwordField = this.querySelector('input[name="password"]');
                const confirmPasswordField = this.querySelector('input[name="confirmPassword"]');
                
                if (passwordField && confirmPasswordField) {
                    const password = passwordField.value;
                    const confirmPassword = confirmPasswordField.value;
                    
                    if (password !== confirmPassword) {
                        e.preventDefault();
                        alert('Passwords do not match!');
                        return false;
                    }
                    
                    if (password.length < 6) {
                        e.preventDefault();
                        alert('Password must be at least 6 characters long!');
                        return false;
                    }
                }
            });
        });
    </script>
  </body>
</html>
