<body class="bg-light">
    <!-- Top Navbar with toggler -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
        <div class="container-fluid">
            <button class="navbar-toggler me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas" aria-controls="sidebarOffcanvas" aria-label="Toggle sidebar">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <a class="navbar-brand fw-bold" href="/dashboard">
                <span class="d-none d-sm-inline">School Management System</span>
                <span class="d-inline d-sm-none">SMS</span>
            </a>
        </div>
    </nav>

    <!-- Offcanvas Sidebar -->
    <%- include('../../partials/offcanvas-sidebar') %>

    <!-- Main Content -->
    <div class="container-fluid main-content">
        <!-- Flash Messages -->
        <% if (typeof info !== 'undefined' && info.length > 0) { %>
            <div class="alert alert-<%= info[1] || 'info' %> alert-dismissible fade show" role="alert">
                <%= info[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        
        <!-- Page Header -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-clipboard-check me-2"></i>
                <%= student.firstName %> <%= student.lastName %>'s Attendance
            </h1>
            <a href="/dashboard" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>

        <!-- Student Information Card -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Student Information</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h5><%= student.firstName %> <%= student.lastName %></h5>
                                <p class="text-muted mb-1">Student ID: <%= student.studentId %></p>
                                <p class="text-muted mb-1">Class: Grade <%= student.gradeLevel %> - Section <%= student.section %></p>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="text-center">
                                            <h4 class="text-primary"><%= attendanceRate %>%</h4>
                                            <small class="text-muted">Overall Attendance Rate</small>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="text-center">
                                            <h4 class="text-success"><%= attendanceRecords.length %></h4>
                                            <small class="text-muted">Total Records</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Attendance Records Table -->
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Attendance History</h6>
            </div>
            <div class="card-body">
                <% if (attendanceRecords.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Subject</th>
                                    <th>Teacher</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% attendanceRecords.forEach(record => { %>
                                    <tr>
                                        <td>
                                            <i class="fas fa-calendar me-2"></i>
                                            <%= new Date(record.date).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <i class="fas fa-book me-2"></i>
                                            <%= record.subjectId ? record.subjectId.name : 'N/A' %>
                                        </td>
                                        <td>
                                            <i class="fas fa-chalkboard-teacher me-2"></i>
                                            <%= record.teacherId ? `${record.teacherId.firstName} ${record.teacherId.lastName}` : 'N/A' %>
                                        </td>
                                        <td>
                                            <% if (record.status === 'Present') { %>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check me-1"></i>Present
                                                </span>
                                            <% } else if (record.status === 'Absent') { %>
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-times me-1"></i>Absent
                                                </span>
                                            <% } else if (record.status === 'Late') { %>
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-clock me-1"></i>Late
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-question me-1"></i><%= record.status %>
                                                </span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary" 
                                                    onclick="viewAttendanceDetails('<%= record._id %>')"
                                                    title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No attendance records found</h5>
                        <p class="text-muted">Attendance records will appear here once teachers start taking attendance.</p>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Attendance Statistics -->
        <% if (attendanceRecords.length > 0) { %>
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Present Days
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        <%= attendanceRecords.filter(r => r.status === 'Present').length %>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-check fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-left-danger shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                        Absent Days
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        <%= attendanceRecords.filter(r => r.status === 'Absent').length %>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-times fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Late Days
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        <%= attendanceRecords.filter(r => r.status === 'Late').length %>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-clock fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
    function viewAttendanceDetails(recordId) {
        // You can implement a modal or redirect to show detailed attendance information
        alert('Attendance details for record: ' + recordId);
        // For now, just show an alert. You can enhance this later with a modal or detailed view
    }
    </script>
</body>
</html> 