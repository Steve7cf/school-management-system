<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Reply to <%= message.sender.firstName %> <%= message.sender.lastName %></h4>
                </div>
                <div class="card-body">
                    <form action="/messages/reply/<%= message._id %>" method="POST">
                        <div class="mb-3">
                            <label class="form-label">Original Message</label>
                            <div class="form-control" style="background:#f8f9fa;" readonly><%= message.message %></div>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Your Reply</label>
                            <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Send Reply</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 