<%- include('../../partials/messages') %>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Announcements</h2>
                <% if (user.role === 'teacher' || user.role === 'admin') { %>
                    <a href="/announcements/create" class="btn btn-primary">
                        <img src="/create.png" alt="Create" class="me-2" style="width: 20px; height: 20px;">
                        New Announcement
                    </a>
                <% } %>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <% if (announcements && announcements.length > 0) { %>
                        <div class="list-group">
                            <% announcements.forEach(announcement => { %>
                                <div class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between align-items-center">
                                        <h5 class="mb-1"><%= announcement.title %></h5>
                                        <small class="text-muted">
                                            <%= new Date(announcement.createdAt).toLocaleDateString() %>
                                        </small>
                                    </div>
                                    <p class="mb-1"><%= announcement.content %></p>
                                    <div class="d-flex justify-content-between align-items-center mt-2">
                                        <div>
                                            <% if (announcement.targetClass) { %>
                                                <span class="badge bg-info">
                                                    Class: <%= announcement.targetClass.name %> <%= announcement.targetClass.section %>
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">School-wide</span>
                                            <% } %>
                                            <% if (announcement.author && announcement.author.user) { %>
                                                <small class="text-muted ms-2">
                                                    By: <%= announcement.author.user.firstName %> <%= announcement.author.user.lastName %>
                                                </small>
                                            <% } %>
                                        </div>
                                        <div class="btn-group">
                                            <a href="/announcements/<%= announcement._id %>" class="btn btn-sm btn-outline-primary">
                                                <img src="/view.png" alt="View" style="width: 16px; height: 16px;">
                                                View
                                            </a>
                                            <% if (
                                                user && user.role === 'teacher' &&
                                                announcement.author &&
                                                user._id &&
                                                announcement.author.toString() === user._id.toString()
                                            ) { %>
                                                <a href="/announcements/<%= announcement._id %>/edit" class="btn btn-sm btn-outline-secondary">
                                                    <img src="/update.png" alt="Edit" style="width: 16px; height: 16px;">
                                                    Edit
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" 
                                                        onclick="deleteAnnouncement('<%= announcement._id %>')">
                                                    <img src="/delete.png" alt="Delete" style="width: 16px; height: 16px;">
                                                    Delete
                                                </button>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <img src="/announcement.png" alt="No Announcements" style="width: 64px; height: 64px; opacity: 0.5;">
                            <h4 class="mt-3">No Announcements</h4>
                            <p class="text-muted">There are no announcements to display.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.card {
    border: none;
    box-shadow: 0 0 15px rgba(0,0,0,0.1);
    border-radius: 10px;
}

.list-group-item {
    border: none;
    margin-bottom: 1rem;
    border-radius: 8px !important;
    background-color: #f8f9fa;
    transition: all 0.3s ease;
}

.list-group-item:last-child {
    margin-bottom: 0;
}

.list-group-item:hover {
    background-color: #f0f1f2;
}

.badge {
    font-weight: 500;
    padding: 0.5em 1em;
}

.btn-group .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

.btn-group .btn img {
    opacity: 0.7;
}

.btn-group .btn:hover img {
    opacity: 1;
}
</style>

<script>
function deleteAnnouncement(id) {
    if (confirm('Are you sure you want to delete this announcement?')) {
        fetch(`/announcements/${id}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            }
        }).then(response => {
            if (response.ok) {
                window.location.reload();
            } else {
                alert('Error deleting announcement');
            }
        }).catch(error => {
            console.error('Error:', error);
            alert('Error deleting announcement');
        });
    }
}
</script> 