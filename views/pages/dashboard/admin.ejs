<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - School Management System</title>
    
    <!-- Bootstrap 5.3.2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome 6.5.1 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
</head>
<body class="bg-light">
    <!-- Top Navbar with toggler -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
        <div class="container-fluid">
            <button class="navbar-toggler me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas" aria-controls="sidebarOffcanvas" aria-label="Toggle sidebar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand fw-bold" href="/dashboard">
                <span class="d-none d-sm-inline">School Management System</span>
                <span class="d-inline d-sm-none">SMS</span>
            </a>
        </div>
    </nav>
    <!-- Offcanvas Sidebar -->
    <%- include('../../partials/offcanvas-sidebar') %>

    <!-- Main Content -->
    <div class="container-fluid main-content">
        <!-- Flash Messages -->
        <% if (typeof info !== 'undefined' && info.length > 0) { %>
            <div class="alert alert-<%= info[1] || 'info' %> alert-dismissible fade show" role="alert">
                <%= info[0] %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        
        <!-- Welcome Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card bg-gradient-primary text-white">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col">
                                <h1 class="h3 mb-0">Welcome back, <%= user.firstName %>!</h1>
                                <p class="mb-0 opacity-75">Here's what's happening in your school today.</p>
                            </div>
                            <div class="col-auto d-none d-md-block">
                                <i class="fas fa-user-shield fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row mb-4">
            <div class="col-12 col-sm-6 col-lg-3 mb-3">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Total Students
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <%= data.totalStudents || 0 %>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-user-graduate fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-lg-3 mb-3">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Total Teachers
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <%= data.totalTeachers || 0 %>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-chalkboard-teacher fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-lg-3 mb-3">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Total Classes
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <%= data.totalClasses || 0 %>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-school fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-lg-3 mb-3">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Total Subjects
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <%= data.totalSubjects || 0 %>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-book fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-lg-3 mb-3">
                <div class="card border-left-danger shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                    Upcoming Exams
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <%= data.upcomingExamsCount || 0 %>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Announcements and Activities - Side by Side -->
        <div class="row">
            <!-- Recent Announcements -->
            <div class="col-12 col-lg-6 mb-4">
                <div class="card shadow h-100">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Recent Announcements</h6>
                        <a href="/announcements" class="btn btn-sm btn-primary">
                            <i class="fas fa-plus"></i> <span class="d-none d-sm-inline">New Announcement</span>
                        </a>
                    </div>
                    <div class="card-body p-0">
                        <div class="announcements-scroll" style="max-height: 400px; overflow-y: auto;">
                            <div class="p-3">
                                <% if (data.recentAnnouncements && data.recentAnnouncements.length > 0) { %>
                                    <% data.recentAnnouncements.forEach(announcement => { %>
                                        <div class="d-flex justify-content-between align-items-start mb-3 pb-3 border-bottom">
                                            <div class="flex-grow-1 me-3">
                                                <h6 class="mb-1 fw-bold"><%= announcement.title %></h6>
                                                <p class="text-muted mb-1 small"><%= announcement.content.substring(0, 100) %>...</p>
                                                <small class="text-muted">Posted on <%= new Date(announcement.createdAt).toLocaleDateString() %></small>
                                            </div>
                                            <a href="/announcements/<%= announcement._id %>" class="btn btn-sm btn-outline-primary flex-shrink-0">View</a>
                                        </div>
                                    <% }) %>
                                <% } else { %>
                                    <p class="text-muted mb-0">No recent announcements.</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activities -->
            <div class="col-12 col-lg-6 mb-4">
                <div class="card shadow h-100">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Recent System Activities</h6>
                    </div>
                    <div class="card-body p-0">
                        <div class="activities-scroll" style="max-height: 400px; overflow-y: auto;">
                            <div class="p-3">
                                <% if (data.recentActivities && data.recentActivities.length > 0) { %>
                                    <div class="list-group list-group-flush">
                                        <% data.recentActivities.forEach(activity => { %>
                                            <div class="list-group-item d-flex justify-content-between align-items-start border-0 px-0 py-3">
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1 fw-bold"><%= activity.eventType %></h6>
                                                    <p class="text-muted mb-1 small">
                                                        <% if (activity.details) { %>
                                                            <% if (typeof activity.details === 'object') { %>
                                                                <% Object.entries(activity.details).slice(0, 2).forEach(([key, value]) => { %>
                                                                    <span class="me-3"><strong><%= key %>:</strong> <%= typeof value === 'object' ? '...' : value %></span>
                                                                <% }); %>
                                                                <% if (Object.keys(activity.details).length > 2) { %>
                                                                    <small class="text-muted">...</small>
                                                                <% } %>
                                                            <% } else { %>
                                                                <%= activity.details %>
                                                            <% } %>
                                                        <% } else { %>
                                                            <span class="text-muted">No details available</span>
                                                        <% } %>
                                                    </p>
                                                    <small class="text-muted">
                                                        <% if (activity.user) { %>
                                                            By: <%= activity.user %> â€¢ 
                                                        <% } %>
                                                        <%= new Date(activity.createdAt).toLocaleString() %>
                                                    </small>
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <p class="text-muted mb-0">No recent activities.</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 
