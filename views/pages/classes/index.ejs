<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Classes</h1>
        <% if (user.role === 'admin') { %>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addClassModal">
                <i class="fas fa-plus"></i> Add New Class
            </button>
        <% } %>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body">
            <% if (classes && classes.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Class Name</th>
                                <th>Section</th>
                                <th>Class Teacher</th>
                                <th>Total Students</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% classes.forEach(classItem => { %>
                                <tr>
                                    <td><%= classItem.name %></td>
                                    <td><%= classItem.section %></td>
                                    <td>
                                        <% if (classItem.teacherId && classItem.teacherId.firstName) { %>
                                            <%= classItem.teacherId.firstName %> <%= classItem.teacherId.lastName %>
                                        <% } else { %>
                                            Not Assigned
                                        <% } %>
                                    </td>
                                    <td>
                                        <% const studentCount = students.filter(s => s.gradeLevel == classItem.gradeLevel.toString() && s.section === classItem.section).length; %>
                                        <%= studentCount %>
                                    </td>
                                    <td>
                                        <div class="d-flex gap-1">
                                            <a href="/classes/<%= classItem._id %>" class="btn btn-sm btn-info">View</a>
                                            <% if (user.role === 'admin') { %>
                                                <a href="/classes/edit/<%= classItem._id %>" class="btn btn-sm btn-warning">Edit</a>
                                                <a href="/attendance/class/<%= classItem._id %>" class="btn btn-sm btn-secondary">Attendance</a>
                                                <form action="/classes/delete/<%= classItem._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this class and all its students?');">
                                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                                </form>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="text-center">No classes found.</p>
            <% } %>
        </div>
    </div>
</div>

<!-- Add Class Modal -->
<% if (user.role === 'admin') { %>
    <div class="modal fade" id="addClassModal" tabindex="-1" aria-labelledby="addClassModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/classes" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addClassModalLabel">Add New Class</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Form</label>
                            <select name="gradeLevel" class="form-select" required>
                                <% for (let i = 1; i <= 4; i++) { %>
                                    <option value="<%= i %>">Form <%= i %></option>
                                <% } %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Section</label>
                            <select name="section" class="form-select" required>
                                <% ['A','B','C','D','E'].forEach(function(sec) { %>
                                    <option value="<%= sec %>"><%= sec %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Class Teacher</label>
                            <select name="teacherId" class="form-select" required>
                                <option value="">Select Teacher</option>
                                <% teachers.forEach(function(teacher) { %>
                                    <option value="<%= teacher._id %>"><%= teacher.firstName %> <%= teacher.lastName %></option>
                                <% }); %>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add Class</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<% } %> 