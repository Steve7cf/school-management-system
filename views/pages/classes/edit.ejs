<%- include('../../partials/messages') %>
<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Edit <%= classObj.name %></h2>
        <a href="/classes" class="btn btn-outline-secondary">
          <i class="fas fa-arrow-left me-2"></i> Back to Classes
        </a>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title mb-0">Edit Class</h4>
        </div>
        <div class="card-body">
          <form action="/classes/edit/<%= classObj._id %>" method="POST">
            <div class="mb-3">
              <label class="form-label">Form</label>
              <select name="gradeLevel" class="form-select" required>
                <% for (let i = 1; i <= 4; i++) { %>
                  <option value="<%= i %>" <%= classObj.gradeLevel == i ? 'selected' : '' %>>Form <%= i %></option>
                <% } %>
              </select>
            </div>
            <div class="mb-3">
              <label class="form-label">Section</label>
              <select name="section" class="form-select" required>
                <% ['A','B','C'].forEach(function(sec) { %>
                  <option value="<%= sec %>" <%= classObj.section === sec ? 'selected' : '' %>><%= sec %></option>
                <% }); %>
              </select>
            </div>
            <div class="mb-3">
              <label class="form-label">Class Teacher</label>
              <select name="teacherId" class="form-select" required>
                <option value="">Select Teacher</option>
                <% teachers.forEach(function(teacher) { %>
                  <option value="<%= teacher._id %>" <%= classObj.teacherId && classObj.teacherId.toString() === teacher._id.toString() ? 'selected' : '' %>><%= teacher.firstName %> <%= teacher.lastName %></option>
                <% }); %>
              </select>
            </div>
            <button type="submit" class="btn btn-primary">Update Class</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div> 