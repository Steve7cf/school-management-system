<div class="container-fluid py-4">
    <h1 class="h3 mb-4">Edit Subject</h1>

    <div class="card shadow">
        <div class="card-body">
            <form action="/subjects/edit/<%= subject._id %>" method="POST">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="name" class="form-label">Subject Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= subject.name %>" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="code" class="form-label">Subject Code</label>
                        <input type="text" class="form-control" id="code" name="code" value="<%= subject.code %>" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="gradeLevel" class="form-label">Grade Level</label>
                        <select class="form-select" id="gradeLevel" name="gradeLevel" required>
                            <% for(let i = 1; i <= 12; i++) { %>
                                <option value="<%= i %>" <%= (subject.gradeLevel == i) ? 'selected' : '' %>>Form <%= i %></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="credits" class="form-label">Credits</label>
                        <input type="number" class="form-control" id="credits" name="credits" value="<%= subject.credits %>" min="1" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="teacherId" class="form-label">Teacher (Optional)</label>
                        <select class="form-select" id="teacherId" name="teacherId">
                            <option value="">None</option>
                            <% teachers.forEach(teacher => { %>
                                <option value="<%= teacher._id %>" <%= (subject.teacherId && subject.teacherId.equals(teacher._id)) ? 'selected' : '' %>>
                                    <%= teacher.firstName %> <%= teacher.lastName %>
                                </option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Update Subject</button>
                    <a href="/subjects" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div> 